---
const { items = [] } = Astro.props;
---
<div class="md:w-64">
  <button id="sidebar-toggle" class="md:hidden p-2">â˜° Docs</button>
  <nav id="sidebar" class="bg-charcoal text-gold hidden md:block md:static">
    <ul class="p-4 space-y-2">
      {items.map(item => (
        <li><a class="hover:underline" href={item.href}>{item.title}</a></li>
      ))}
    </ul>
  </nav>
  <script>
    const toggle = document.getElementById('sidebar-toggle');
    const sidebar = document.getElementById('sidebar');
    toggle?.addEventListener('click', () => sidebar.classList.toggle('hidden'));
  </script>
</div>
